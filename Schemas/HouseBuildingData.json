{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://github.com/JamesVeug/ATS_JSONLoader",
  "type": "object",
  "title": "HouseBuilding",
  "description": "Buildings that server housing needs for Villagers. (ie: Human House, Frog House)\n\nFor JSONLoader to load this file into Against the Storm create a file on your computer ending with _houseBuilding.json and paste the contents of the JSON inside. Example: \"MyFile_houseBuilding.json\"",
  "required": [
    "guid",
    "name"
  ],
  "properties": {
    "guid": {
      "description": "Unique identifier for the mod that added this. Blank if it's added as part of the base game.",
      "pattern": "^[a-zA-Z\\d]+$",
      "type": "string"
    },
    "name": {
      "description": "Unique identifier",
      "pattern": "^[a-zA-Z\\d_]+$",
      "minLength": 1,
      "type": "string"
    },
    "icon": {
      "default": "",
      "description": "Name of the file containing the icon for this object. Example: MyCustomGood.png\nIcon size: 128x128 pixels",
      "type": "string"
    },
    "displayName": {
      "description": "Name that will appear in the game.\nDefaults to english. To include more languages, add a new field with the language code to the end of the key. For example, 'displayName' => 'displayName_pl' for polish.",
      "type": "string"
    },
    "description": {
      "description": "Long Description describing what it does.\nDefaults to english. To include more languages, add a new field with the language code to the end of the key. For example, 'displayName' => 'displayName_pl' for polish.",
      "type": "string"
    },
    "order": {
      "default": 0,
      "description": "The order of which this will be good will be sorted in some lists.",
      "type": "integer"
    },
    "maxAmount": {
      "default": 0,
      "description": "Maximum amount of this building the player can have.",
      "type": "integer"
    },
    "maxBuilders": {
      "default": 4,
      "description": "Total builders that can construct this building.",
      "type": "integer"
    },
    "baseRefundRate": {
      "default": 1.0,
      "description": "The base refund rate for this building.",
      "type": "number"
    },
    "canBePicked": {
      "default": true,
      "type": "boolean"
    },
    "initiallyEssential": {
      "default": true,
      "type": "boolean"
    },
    "category": {
      "default": "None",
      "description": "Column it appears in to enable/disable use by villagers. If not set API will auto set it.",
      "anyOf": [
        {
          "type": "string",
          "title": "Predefined BuildingCategoriesTypes",
          "enum": [
            "City_Buildings",
            "Debug_Nodes",
            "Decorations",
            "Event",
            "Event_Ghost",
            "Food_Production",
            "Housing",
            "Industry",
            "Lore_Tablet_1",
            "Lore_Tablet_2",
            "Lore_Tablet_3",
            "Lore_Tablet_4",
            "Lore_Tablet_5",
            "Lore_Tablet_6",
            "Lore_Tablet_7",
            "Relics",
            "Resource_Gathering",
            "Roads",
            "Ruins",
            "Tutorial_Invisible"
          ]
        },
        {
          "type": "string",
          "title": "Mod-Added BuildingCategoriesTypes"
        }
      ]
    },
    "tags": {
      "default": "None",
      "description": "\n\nFor more information, see:\nhttps://github.com/JamesVeug/AgainstTheStormAPI/blob/master/ATS_API/Scripts/Helpers/Enums/BuildingTagTypes.cs\nhttps://hoodedhorse.com/wiki/Against_the_Storm/Trading",
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string",
            "title": "Predefined BuildingTagTypes",
            "enum": [
              "Alchemy",
              "Animals",
              "Brewing",
              "Cloth",
              "Cysts",
              "Farming",
              "Forest",
              "Hearth_Beavers",
              "Hearth_Foxes",
              "Hearth_Frogs",
              "Hearth_Harpies",
              "Hearth_Humans",
              "Hearth_Lizards",
              "Rainwater",
              "Stone",
              "Tech",
              "Warmth",
              "Wood"
            ]
          },
          {
            "type": "string",
            "title": "Mod-Added BuildingTagTypes"
          }
        ]
      }
    },
    "usabilityTags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "movingCost": {
      "type": "object"
    },
    "movable": {
      "type": "boolean"
    },
    "requiredGoods": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "housingRaces": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "housingPlaces": {
      "type": "integer"
    },
    "servedNeeds": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}